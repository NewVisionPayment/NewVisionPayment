@page "/confirmpayment"
@using NewVisionPayment.Models;

@inject Services.customerMoney customerMoney


<MudCard>




    <MudText Typo="Typo.h4">
        You @confirmFine.firstName @confirmFine.lastName  have agreed to pay the amount below in legal settlement towards your obligations under the court process, ID number @confirmFine.Id.
    </MudText>
    

    <MudText Typo="Typo.h3">
        <MudAlert Severity="Severity.Error" Variant="Variant.Outlined" Dense="true" Class="my-2">£@customerMoney.amountToPay</MudAlert>
    </MudText>


</MudCard>



    @code
{

        [Parameter]
        public NewVisionCustomer confirmFine { get; set; } = new NewVisionCustomer();

        public float myFinalAmount { get; set; }



    }
