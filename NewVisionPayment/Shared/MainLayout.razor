@inherits LayoutComponentBase


<MudThemeProvider Theme="MyCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudText>Fine Payments System</MudText>
        <MudIconButton Icon="@Icons.Custom.Brands.MicrosoftAzureDevOps" Color="Color.Inherit" Link="https://portal.azure.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/NewVisionPayment/NewVisionPayment" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Fine Payments System</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    @code{

        MudTheme MyCustomTheme = new MudTheme()
        {

            Palette = new Palette()
            {

                Primary = "#222222ff",
                Secondary = "#009911ff",
                Tertiary = "#ff0022ff",
                TextPrimary = "#000000ff",
                TextSecondary = "#000000ff",
                TextDisabled = "#000000ff",
                GrayDefault = "#EEEEEE",
                PrimaryDarken = "rgb(22, 22, 22)"

            }
        };

    }
}