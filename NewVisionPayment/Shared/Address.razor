@page "/address"
@using NewVisionPayment.Models;


<MudContainer Class="mt-1" MaxWidth="MaxWidth.Medium">
    <MudGrid Spacing="2" Class="mt-4">
        <MudItem xs="7">
            <MudGrid>
                <MudList Clickable="true" Dense="true">
                    <MudTextField @bind-Value="displayCustomer.Id" Label="Case Id" ReadOnly="true" Variant="Variant.Text" />
                    <MudDivider />
                    <MudTextField @bind-Value="displayCustomer.firstName" Label="First Name" ReadOnly="true" Variant="Variant.Text" />
                    <MudTextField @bind-Value="displayCustomer.lastName" Label="Last Name" ReadOnly="true" Variant="Variant.Text" />
                    <MudTextField @bind-Value="displayCustomer.addressLine1" Label="Address 1" ReadOnly="true" Variant="Variant.Text" />
                    <MudTextField @bind-Value="displayCustomer.addressLine2" Label="Address 2" ReadOnly="true" Variant="Variant.Text" />
                    <MudTextField @bind-Value="displayCustomer.city" Label="City" ReadOnly="true" Variant="Variant.Text" />
                    <MudTextField @bind-Value="displayCustomer.postcode" Label="PostCode" ReadOnly="true" Variant="Variant.Text" />
                </MudList>
            </MudGrid>
        </MudItem>
    </MudGrid>
</MudContainer>


@code
{
    // This is the id we will carry over from our beginning screen and passed through via the
    [Parameter]
    public NewVisionCustomer displayCustomer { get; set; } = new NewVisionCustomer();

}